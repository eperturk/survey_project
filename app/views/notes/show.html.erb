<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading" id="note-heading">
    <div id="title" >
      <%= @note.title %>
    </div>
    <div id="department">
      Department: <%= @note.department %>
    </div>
  </div>
  <div class="panel-body">
    <% if @note.segments.blank? %>
      <%= link_to "Click here to add content", new_note_segment_path(@note) %>
    <% else %>
      <table>
        <tbody>
          <% @note.segments.each do |segment| %>
            <tr>
              <td width="7%"><%= link_to "Edit ", edit_note_segment_path(@note, segment), :class => "glyphicon glyphicon-pencil" %></td>
              <td width="93%"><%= segment.content.html_safe %></td>
            </tr>
          <% end %>
          <tr>
            <td></td>
            <td><%= link_to "Add Section", new_note_segment_path(@note), :class => "glyphicon glyphicon-plus" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
